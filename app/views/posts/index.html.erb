<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <table>
    <tr>
      <th>Created</th>
      <th>Title</th>
      <th>Content</th>
    </tr>
    <% @posts.each do |post| %>
    <tr>
      <td>
        <%= post.created_at %>
      </td>
      <td>
        <%= link_to post.title, post %>
      </td>
      <td>
        <%= post.content %>
      </td>
    </tr>
    <% end %>
  </table>
</div>

<%= link_to "New post", new_post_path %>
